  type:              exitcode-stdio-1.0
  hs-source-dirs:    tests
  ghc-options:       -W -threaded
  if flag(devel)
    ghc-options: -Werror
  main-is:           test.hs
  build-depends:     base  >= 4 && < 5
               ,     containers >= 0.5
               ,     directory >= 1.2
               ,     filepath >= 1.3
               ,     mtl >= 2.1
               ,     process >= 1.2
               ,     optparse-applicative >= 0.11 && <= 0.12.1.0
               ,     stm >= 2.4
               ,     tagged >= 0.7.3
               ,     tasty >= 0.10
               ,     tasty-ant-xml
               ,     tasty-hunit >= 0.9
               ,     tasty-rerun >= 1.1
               ,     transformers >= 0.3
